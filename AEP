4..#include<stdio.h>
#include<conio.h>
void main()
{
    int n,i,j,k,count=0,a[50],rem,b[50];
    printf("\n enter the value of k");
    scanf("%d",&k);
    printf("\n enter the elements");
    do
    {
        scanf("%d",&a[i]);
        i++;
    }while(a[i-1]!=-1);
    for(j=0;j<i;j++)
    {
        if (a[j]%2==0)
        {
            k--;
        }
            if(k==0)
            {

                n=j;
                break;
            }
    }
    if(k==0)
    {
        printf("\n the element is %d",a[n]);
    }
    else
    {
        printf("\n there were not enough even numbers");
    }
}

5..#include<stdio.h>
#include<stdlib.h>

int main()
{
    int a;
    int b;
    int flag = 0;
    int count = 0;
    printf("Enter the number : ");
    scanf("%d",&a);
    while(a != -1)
    {
        printf("Enter the number : ");
        scanf("%d",&b);
        if(a==b)
        {
            flag++;
        }
        else if(b == -1)
        {
            break;
        }
        else
        {
            a=b;
            count++;
        }
    }

    if(count ==  0)
    {
        printf("Only One integer : '0'");
    }
    else
    {
        printf("Distinct integer : '1'");
return 0;
    }
}

